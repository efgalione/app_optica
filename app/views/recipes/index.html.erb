<div class="page-header">
  <h1>Recetas</h1>
</div>
<table class="table table-over table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Precio</th>
      <th>Se√±a</th>
      <th>Saldo</th>
      <th>Telefono</th>
      <th>Mail</th>
      <th>Fecha Alta</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.id, recipe_path(recipe) %></td>
        <td><%= recipe.first_name %></td>
        <td><%= recipe.last_name %></td>
        <td><%= recipe.price %></td>
        <td><%= recipe.cash_delivery %></td>
        <td><%= recipe.cash_balance %></td>
        <td><%= recipe.phone %></td>
        <td><%= recipe.mail %></td>
        <td><%= recipe.created_at %></td>
        <td>
          <%= link_to 'Editar',
                      edit_recipe_path(recipe), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Eliminar',
                      recipe_path(recipe),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nueva Receta',
            new_recipe_path,
            :class => 'btn btn-primary' %>
